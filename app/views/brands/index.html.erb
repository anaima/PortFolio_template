<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.user %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Add products', new_product_path(brand_id: brand.id) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

  </tbody>


 <% brand.products.each do |product| %>
 <tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.brand.name unless product.brand.nil?%></td> <!-- display the name's brand -->

  <td></td>
  <td></td>
</tr>
  <% end %>
 <%end%>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>
